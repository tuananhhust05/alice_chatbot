# ===== Groq LLM =====
GROQ_API_KEY=your_groq_api_key_here

# ===== MongoDB (shared with backend) =====
MONGO_URI=mongodb://alice:alice_secret@mongodb:27017/alice_chatbot?authSource=admin
MONGO_DB_NAME=alice_chatbot

# ===== Weaviate =====
WEAVIATE_URL=http://weaviate:8080

# ===== Kafka (consume from backend) =====
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CHAT_TOPIC=chat_requests
KAFKA_FILE_TOPIC=file_requests
KAFKA_CONSUMER_GROUP=orchestrator_group

# ===== Kafkaflow (emit events to dataflow) =====
KAFKAFLOW_BOOTSTRAP_SERVERS=kafkaflow:9094
KAFKAFLOW_EVENTS_TOPIC=chatbot.events
KAFKAFLOW_LLM_TOPIC=llm.calls
KAFKAFLOW_FILE_TOPIC=file.processing

# ===== Redis =====
REDIS_URL=redis://redis:6379/0
REDIS_RESULT_TTL=300

# ===== File Upload =====
UPLOAD_DIR=./uploads

# ===== Concurrency =====
MAX_WORKERS=10
