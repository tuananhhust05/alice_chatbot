# ===== MongoDB =====
MONGO_URI=mongodb://alice:alice_secret@mongodb:27017/alice_chatbot?authSource=admin
MONGO_DB_NAME=alice_chatbot

# ===== Google OAuth =====
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ===== App =====
SECRET_KEY=your_super_secret_key_change_this
FRONTEND_URL=http://localhost:3009
BACKEND_URL=http://localhost:8009

# ===== Security =====
# Set to True in production with HTTPS
SECURE_COOKIES=False
# Enable CSRF protection
CSRF_ENABLED=True
CSRF_SECRET=your_csrf_secret_key_change_this

# ===== Admin =====
ADMIN_USERNAME=admin
# IMPORTANT: Change this password in production!
ADMIN_PASSWORD=admin123
ADMIN_SECRET_KEY=your_admin_jwt_secret_here
# Brute-force protection settings
ADMIN_LOGIN_MAX_ATTEMPTS=5
ADMIN_LOGIN_LOCKOUT_MINUTES=15

# ===== Rate Limiting (requests per minute) =====
RATE_LIMIT_DEFAULT=60
RATE_LIMIT_CHAT=30
RATE_LIMIT_AUTH=20
RATE_LIMIT_FILE_UPLOAD=10
RATE_LIMIT_ADMIN=100
RATE_LIMIT_WINDOW_SECONDS=60

# ===== Kafka =====
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CHAT_TOPIC=chat_requests
KAFKA_FILE_TOPIC=file_requests

# ===== Redis =====
REDIS_URL=redis://redis:6379/0

# ===== File Upload =====
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=10
